{
	"version": 2,
	"builds": [
		{
			"src": "build/server.js",
			"use": "@vercel/node",
			"config": { "includeFiles": ["build/**"] }
		}
	],
	"routes": [
		{
			"src": "/(.*)",
			"dest": "build/server.js"
		}
	],
	"outputDirectory": "build",
	"buildCommand": "bun build:prod",
	"installCommand": "bun install"
}
