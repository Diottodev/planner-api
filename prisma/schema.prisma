generator client {
  provider      = "prisma-client-js"
  engineType    = "binary"
  binaryTargets = ["debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(uuid())
  name       String
  email      String     @unique
  photo      String?
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt()
  todos      Todo[]
  auth_links AuthLinks?

  @@map("users")
}

model AuthLinks {
  user    User   @relation(fields: [user_id], references: [id])
  user_id String @unique
  code    String

  @@map("auth_links")
}

enum Status {
  new
  doing
  completed
}

model Todo {
  id          String   @id @default(uuid())
  title       String
  description String
  important   Boolean
  completed   Status   @default(new)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt()
  user        User     @relation(fields: [user_id], references: [id])
  user_id     String

  @@map("todos")
}
