{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*",
      ]
    },
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "target": "es2018",
    "lib": [
      "es2019"
    ],
    "declarationMap": true,
    "noImplicitAny": false,
    "declaration": true,
    "allowJs": true,
    "preserveConstEnums": true,
    "outDir": "./build",
    "sourceMap": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "types": [
      "bun-types"
    ],
    "strict": true,
    "esModuleInterop": true,
    "disableReferencedProjectLoad": true,
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.*",
    "./build/**/*",
    "../common/**/*test.*"
  ]
}