{
	"name": "planner-api",
	"version": "1.0.50",
	"scripts": {
		"generate": "bunx prisma generate",
		"deploy": "bunx prisma migrate deploy",
		"dev": "bun run --watch src/server.ts",
		"build:prod": "bun build src/server.ts --target=bun --outfile=build/server.js",
		"start": "sudo apt install libssl-dev && bun run generate && bun run build/server.js"
	},
	"prisma": {
		"schema": "prisma/schema.prisma"
	},
	"dependencies": {
		"@elysiajs/cookie": "^0.8.0",
		"@elysiajs/cors": "^0.8.0",
		"@elysiajs/eden": "^0.8.0",
		"@elysiajs/jwt": "^0.8.0",
		"@prisma/client": "5.7.1",
		"@react-email/components": "0.0.12",
		"@types/nodemailer": "^6.4.14",
		"@types/react": "^18.2.46",
		"@types/react-dom": "^18.2.18",
		"bun-vercel": "^1.0.0-alpha.5",
		"elysia": "latest",
		"nodemailer": "^6.9.8",
		"prisma": "^5.7.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-email": "1.10.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.4.1",
		"bun-types": "^1.0.20"
	},
	"module": "src/index.js"
}
